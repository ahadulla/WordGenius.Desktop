<Application x:Class="WordGenius.Desktop.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:WordGenius.Desktop"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>

                <!--begin::Themes-->
                <ResourceDictionary x:Name="Theme"  Source="/Thems/DarkTheme.xaml"/>
                <!--end::Themes-->

                <!--begin::Icons-->
                <ResourceDictionary Source="/Assets/Icons/Icons.xaml"/>
                <!--end::Icons-->

                <!--begin::Styles-->
                <ResourceDictionary Source="/Styles/ButtonStyles.xaml"/>
                <ResourceDictionary Source="/Styles/TextBlokStyles.xaml"/>
                <ResourceDictionary Source="/Styles/ContextMenuStyles.xaml"/>
                <!--end::Styles-->

            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
