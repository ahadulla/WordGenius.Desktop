<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

        <Style x:Key="ContextMenuStyle" TargetType="ContextMenu">
            <Setter Property="Height" Value="114"/>
            <Setter Property="Background" Value="{DynamicResource PrimaryBorderColor}" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Foreground" Value="{DynamicResource PrimaryTextColor}"/>
            <Setter Property="ItemContainerStyle">
                <Setter.Value>
                    <Style TargetType="MenuItem">
                        <Setter Property="Icon" Value="{x:Null}"/>
                    </Style>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="MenuStyle" TargetType="MenuItem">
            <Setter Property="Icon" Value="null"/>
            <Setter Property="Height" Value="114"/>
            <Setter Property="Width" Value="230"/>
            <Setter Property="Background" Value="{DynamicResource PrimaryBorderColor}" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Foreground" Value="{DynamicResource PrimaryTextColor}"/>
        </Style>

</ResourceDictionary>